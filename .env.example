# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=billing_app

# API Configuration
# This connection string must match the database credentials above
# Host must match the service name in docker-compose (billing-db)
CONNECTION_STRING=Host=billing-db;Database=billing_app;Username=postgres;Password=secure_password_here

# JWT Security
# Generate a strong extensive random string for production
JWT_SECRET=super_secret_key_change_this_for_production_use_at_least_32_chars
JWT_ISSUER=BillingApp
JWT_AUDIENCE=BillingAppUser

# General
ASPNETCORE_ENVIRONMENT=Production
